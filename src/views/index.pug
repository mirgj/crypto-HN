extends ./common/layout.pug
include ./common/mixins.pug

block content
  div.columns.spacer
    div.column.col-12.stories
      -var n = 0;
      if stories
        each story in stories
          -n++;
          +storyRender(story, user_vote_mapping, can_downvote, n, current_page, page_size)
  if has_next
    +pager('/', next_page)