{
  "name": "pico-news",
  "version": "0.0.1",
  "description": "pico-news",
  "main": "src/app.js",
  "nyc": {
    "require": [
      "babel-register"
    ],
    "exclude": [
      "tests/*"
    ],
    "include": [
      "src/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "pretest": "eslint --ignore-path .gitignore .",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors --require babel-register --require babel-polyfill tests --recursive",
    "test:cov": "./node_modules/.bin/nyc npm test",
    "test:uni": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors --require babel-register --require babel-polyfill tests/unit --recursive",
    "test:uni:cov": "./node_modules/.bin/nyc npm run test:uni",
    "test:int": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors --require babel-register --require babel-polyfill tests/integration --recursive",
    "test:int:cov": "./node_modules/.bin/nyc npm run test:int",
    "start": "./node_modules/.bin/babel-node src/app.js"
  },
  "author": "mirgj <mirgj@outlook.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "compression": "^1.7.1",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "express-validation": "^1.0.2",
    "helmet": "^3.11.0",
    "http-status": "^1.0.1",
    "joi": "^13.1.2",
    "jsonwebtoken": "^8.2.0",
    "markdown-it": "^8.4.1",
    "moment": "^2.20.1",
    "mongodb": "^3.0.2",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.0-rc.4",
    "sanitize-html": "^1.18.2",
    "winston": "^3.0.0-rc3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-rewire": "^1.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.0",
    "mocha": "^5.0.1",
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.4.8",
    "supertest": "^3.1.0",
    "supertest-as-promised": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mirgj/pico-news.git"
  },
  "bugs": {
    "url": "https://github.com/mirgj/pico-news/issues"
  },
  "homepage": "https://github.com/mirgj/pico-news#readme"
}
