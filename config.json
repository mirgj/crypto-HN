{
  "database": {
    "connectionString": "mongodb://localhost:27017/",
    "defaultDbName": "pico-news"
  },
  "application": {
    "env": "dev",
    "hostname": "0.0.0.0",
    "port": 8080,
    "enableSSL": false,
    "sslPort": 443,
    "allowedOrigin": "*",
    "privateKeyPath": "/a/path/to/file.pem",
    "certificatePath": "/a/path/to/file.pem",
    "caPath": "/a/path/to/file.pem"
  },
  "keys": {
    "sessionSecret": "mysessionsecret",
    "jwtSecret": "myjwtsecret",
    "hashSalt": 8
  },
  "session": {
    "jwtDuration": 3600,
    "staticMaxAge": 31556952000
  },
  "defaultValues": {
    "take": 32,
    "minTake": 2,
    "minUserLength": 4,
    "maxUserLength": 16,
    "minPassLength": 5,
    "maxTextLength": 2000,
    "maxTitleLength": 100,
    "maxCommentLength": 4096,
    "karmaIncrementMill": 180000,
    "minKarmaForDownvote": 200,
    "showStartWith": "Show CN:",
    "askStartWith": "Ask CN:"
  },
  "logs": {
    "errorFilename": "./logs/error.log",
    "combinedFilename": "./logs/combined.log",
    "expressFilename": "./logs/express-access.log"
  }
}